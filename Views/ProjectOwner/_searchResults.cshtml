@model IEnumerable<QA.Entities.Business_Entities.Ent_ProjectOwner>

<script src="~/Design_Template/build/js/custom.js"></script>

<div class="x_panel">
    <div class="x_title">
        <h2>@Localization.Global.SearchResults</h2>
        <div class="clearfix"></div>
    </div>

    <div class="x_content">
        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
               cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>@Localization.ProjectOwner.pOTID_ViewSearch</th>
                    <th>@Localization.ProjectOwner.name_ViewSearch</th>
                    <th>@Localization.ProjectOwner.Description_ViewSearch</th>
                    <th>@Localization.ProjectOwner.boolIsOwner_ViewSearch</th>
                    <th>@Localization.ProjectOwner.Accountable_ViewSearch</th>
                    <th>@Localization.Global.boolIsActive</th>
                    <th>@Localization.ContactDetails.Phone_ViewSearch</th>
                    <th>@Localization.ContactDetails.workPhoneNumber_ViewSearch</th>
                    <th>@Localization.ContactDetails.workExtNumber_ViewSearch</th>
                    <th>@Localization.ContactDetails.mobile_ViewSearch</th>
                    <th>@Localization.ContactDetails.email_ViewSearch</th>
                    <th>@Localization.ContactDetails.fax_ViewSearch</th>
                    <th>@Localization.ContactDetails.AddressLine_ViewSearch</th>
                    <th>@Localization.ContactDetails.workPlace_ViewSearch</th>

                    <th>@Localization.Global.SearchTableActions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.pOTName</td>
                        <td>@item.name</td>
                        <td>@item.description</td>
                        <td>@item.isOwner</td>
                        <td>@item.accountable</td>
                        <td>@item.isActive</td>
                        <td>@item.contactDetails.phoneNumber</td>
                        <td>@item.contactDetails.workPhoneNumber</td>
                        <td>@item.contactDetails.workExtNumber</td>
                        <td>@item.contactDetails.mobileNumber</td>
                        <td>@item.contactDetails.emailAddress</td>
                        <td>@item.contactDetails.fax</td>
                        <td>@item.contactDetails.addressLine</td>
                        <td>@item.contactDetails.workPlace</td>
                        <td>
                            @Ajax.ActionLink(Localization.Global.SearchTableActions_View, "View", "ProjectOwner"
                                , new { ProjectOwnerID = @item.projectOwnerID }, new AjaxOptions()
                                 {
                                    InsertionMode = InsertionMode.Replace,
                                    HttpMethod = "Get",
                                    LoadingElementId = "imgloader",
                                    OnBegin = "ajaxViewBegin",
                                    OnSuccess = "ajaxViewSuccess",
                                    OnFailure = "ajaxViewError",
                                    UpdateTargetId = "divViewItemModal",
                        }) | @Html.ActionLink(Localization.Global.SearchTableActions_Edit, "Edit", "ProjectOwner"
             , new { POID = @item.projectOwnerID }, null)
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    <div class="x_content">
        <div id="divViewItemModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog"
             aria-hidden="true">
        </div>
    </div>
</div>