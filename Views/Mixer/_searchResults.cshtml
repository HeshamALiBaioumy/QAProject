@model IEnumerable<QA.Entities.Business_Entities.Ent_Mixer>

<script src="~/Design_Template/build/js/custom.js"></script>

<div class="x_panel">
    <div class="x_title">
        <h2>@Localization.Global.SearchResults</h2>
        <div class="clearfix"></div>
    </div>

    <div class="x_content">
        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
               cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>@Localization.Mixer.factoryID_ViewSearch</th>
                    <th>@Localization.Mixer.mixerTypeID_ViewSearch</th>
                    <th>@Localization.Mixer.Name_ViewSearch</th>
                    <th>@Localization.Mixer.description_ViewSearch</th>
                    <th>@Localization.Mixer.mixerCode_ViewSearch</th>
                    <th>@Localization.Mixer.mixerModel_ViewSearch</th>
                    <th>@Localization.Mixer.mixerPower_ViewSearch</th>
                    <th>@Localization.Mixer.mixer_status_ViewSearch</th>
                    <th>@Localization.Global.boolIsActive</th>
                    <th>@Localization.Global.SearchTableActions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Ajax.ActionLink(@item.factoryName, "View", "Factory"
                                                , new { FactoryID = @item.factoryID }, new AjaxOptions()
                                                 {
                                                    InsertionMode = InsertionMode.Replace,
                                                    HttpMethod = "Get",
                                                    LoadingElementId = "imgloader",
                                                    OnBegin = "ajaxViewBegin",
                                                    OnSuccess = "ajaxViewSuccess",
                                                    OnFailure = "ajaxViewError",
                                                    UpdateTargetId = "divViewItemModal",
                                        })
                        </td>
                        <td>
                            @Ajax.ActionLink(@item.mixerTypeName, "View", "MixerType"
                                                , new { mixerTypeID = @item.mixerTypeID }, new AjaxOptions()
                                                 {
                                                    InsertionMode = InsertionMode.Replace,
                                                    HttpMethod = "Get",
                                                    LoadingElementId = "imgloader",
                                                    OnBegin = "ajaxViewBegin",
                                                    OnSuccess = "ajaxViewSuccess",
                                                    OnFailure = "ajaxViewError",
                                                    UpdateTargetId = "divViewItemModal",
                                        })
                        </td>
                        <td>@item.name</td>
                        <td>@item.description</td>
                        <td>@item.mixerCode</td>
                        <td>@item.mixerModel</td>
                        <td>@item.mixerPower</td>
                        <td>@item.mixerStatus</td>
                        <td>@item.isActive</td>
                        <td>
                            @Ajax.ActionLink(Localization.Global.SearchTableActions_View, "View", "Mixer"
                                , new { MixerID = @item.mixerID }, new AjaxOptions()
                                 {
                                    InsertionMode = InsertionMode.Replace,
                                    HttpMethod = "Get",
                                    LoadingElementId = "imgloader",
                                    OnBegin = "ajaxViewBegin",
                                    OnSuccess = "ajaxViewSuccess",
                                    OnFailure = "ajaxViewError",
                                    UpdateTargetId = "divViewItemModal",
                        }) | @Html.ActionLink(Localization.Global.SearchTableActions_Edit, "Edit", "Mixer"
, new { MxID = @item.mixerID }, null)
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    <div class="x_content">
        <div id="divViewItemModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog"
             aria-hidden="true">
        </div>
    </div>
</div>